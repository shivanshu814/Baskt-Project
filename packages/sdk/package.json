{
  "name": "@baskt/sdk",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "copy-program-files": "node scripts/copy-program-files.js",
    "build": "pnpm  --filter @baskt/types build && npm run copy-program-files && tsc",
    "clean": "rimraf dist && rm tsconfig.tsbuildinfo",
    "dev": "npm run build -- --watch",
    "lint": "eslint src --ext .ts",
    "test": "mocha -r ts-node/register tests/**/*.test.ts"
  },
  "dependencies": {
    "@baskt/types": "workspace:*",
    "@coral-xyz/anchor": "0.31.0",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "1.98.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.6",
    "@types/chai": "^5.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.11",
    "bn.js": "^5.2.1",
    "chai": "^4.3.4",
    "eslint": "^8.56.0",
    "mocha": "^9.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.7.3"
  }
}
