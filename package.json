{
  "name": "@baskt/monorepo",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev:lib": "turbo run dev --filter=@baskt/sdk --filter=@baskt/types --filter=@baskt/querier --filter=@baskt/ui",
    "build": "turbo run build",
    "build:lib": "turbo run build --filter=@baskt/sdk --filter=@baskt/types",
    "build:server": "turbo run build --filter=@baskt/backend --filter=@baskt/oracle --filter=@baskt/event-engine",
    "dev:all": "turbo run dev",
    "dev:admin": "turbo run dev --filter=@baskt/admin-app --filter=@baskt/backend",
    "dev:main": "turbo run dev --filter=@baskt/main-app --filter=@baskt/backend",
    "dev:services": "turbo run dev --filter=@baskt/backend --filter=@baskt/event-engine",
    "deploy:services": "git pull && pnpm i && pnpm build:server && pnpm pm2:restart --update-env",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.3.5",
    "@types/js-cookie": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "turbo": "^2.5.0"
  },
  "workspaces": ["apps/*", "packages/*", "services/*"],
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "@trpc/client": "^10.45.1",
    "aws4": "^1.13.2",
    "bn.js": "^5.2.1",
    "js-cookie": "^3.0.5",
    "pg": "^8.16.0"
  }
}
