{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "..",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["../backend/src/*"],
      "@baskt/*": ["../../packages/*"]
    }
  },
  "include": ["src/**/*", "../backend/src/**/*"],
  "exclude": ["node_modules"]
}
